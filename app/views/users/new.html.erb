<div id="nav-bar">
  <div>
    <i class="large material-icons">queue_music</i>
    <h3 id ="gig-db">GIG-db.com</h3>
  </div>
</div>

<h1>Sign up to store a record of the concerts you've been to</h1>
  <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="new_user">
    <%= f.label 'Username' %><br>
    <%= f.text_field :username, :class => 'user_input', :placeholder => 'Enter your username' %>
  </div>
  <br>
  <div class="new_user">
    <%= f.label 'Email' %><br>
    <%= f.text_field :email, :class => 'user_input', :placeholder => 'Enter your email' %>
  </div>
  <br>
  <div class="new_user">
    <%= f.label 'Password' %><br>
    <%= f.password_field :password, :class => 'user_input', :placeholder => 'Enter your password' %>
  </div>
  <br>
  <div class="new_user">
    <%= f.label 'Password confirmation' %><br>
    <%= f.password_field :password_confirmation, :class => 'user_input', :placeholder => 'Confirm your password' %>
  </div>
  <br>
  <div class= "submit_concert_button" >
    <%= submit_tag "Sign up", { :class => 'btn' } %> 
  </div>
  <br>
 <% end %>

 <h3>Change your mind? Click <%= link_to 'here', concerts_path %> here to view the concert database</h3>
