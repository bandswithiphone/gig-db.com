<div class="container-fluid">
  <div id="nav-bar">
    <div>
      <i class="large material-icons">queue_music</i>
      <h3 id ="gig-db">GIG-db.com</h3>
    </div>
    <div id= 'logout'>
      <% if current_user.present? %>
        <%= link_to 'Logout', logout_path %>
      <% else %>
        <%= link_to 'Create an account', new_user_path %>
      <% end %>
    </div>
  </div>
</div>

<h1>Editing Concert</h1>
<%= form_for(@concert) do |f| %>
 <div class="concert_search">
    <%= f.label :artist %><br>
    <%= f.text_field :artist, :class => 'input_field' %>
  </div>
  <div class="concert_search">
    <%= f.label :date %><br>
    <%= f.text_field :date, :class => 'input_field' %>
  </div>
<br>
  <div class="submit_concert_button">
    <%= f.submit "Edit the concert" , { :class => 'btn' } %>
  </div>
<% end %>
<br> 

<%= link_to 'Back to my concert list', user_concerts_path(current_user) %> |
<%= link_to 'Go to main concert page', concerts_path %>
